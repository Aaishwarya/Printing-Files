import java.io.File;
import java.lang.String;

public class PrintFiles
{
    public static void main(String[] args)
    {
        File f=new File(".");
        printFiles(f);
    }
    public static void printFiles(File f)
    {
        String absolutePath=f.getAbsolutePath();
        
        if(f.isDirectory())
        {
            
            File[] paths=f.listFiles();
            int l=paths.length;
            System.out.println(l+" "+absolutePath);
            for(int i=0;i<l;i++)
            {
                printFiles(paths[i]);
            }
        }
        else
        {
            System.out.println("0 "+absolutePath);
        }
        
    }
    
}
